generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticker {
  id       String @id @default(cuid())
  symbol   String @unique
  news     NewsEvent[]
  scores   NewsScore[]
}

model NewsEvent {
  id          String   @id @default(cuid())
  tickerId    String
  ticker      Ticker   @relation(fields: [tickerId], references: [id], onDelete: Cascade)
  headline    String
  url         String?
  publishedAt DateTime
  type        String?
  hash        String   @unique
  scores      NewsScore[]
}

model NewsScore {
  id          String   @id @default(cuid())
  tickerId    String
  ticker      Ticker   @relation(fields: [tickerId], references: [id], onDelete: Cascade)
  newsEventId String
  newsEvent   NewsEvent @relation(fields: [newsEventId], references: [id], onDelete: Cascade)

  retPre5     Float?
  ret1d       Float?
  ret5d       Float?
  pricedIn    Boolean?
  score       Int
  calculatedAt DateTime @default(now())

  @@unique([tickerId, newsEventId])
}
